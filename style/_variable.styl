// font

$body-font = 400 8.5px SourceHanSansJP, sans-serif
// $body-font = 400 8.5px TBUDGoStd, SourceHanSansJP, sans-serif
$body-line-height = 1.8
$heading-font-family = SourceHanSansJP, sans-serif
