$page-margin-inner = 25mm
$page-margin-outer = 15mm

$side-column-width = 25mm
$colum-gap-width = 8mm

$image-margin = 1.2rem

$stretch = 5in

$color-dominant = #006ebe
$color-dominant-bg = #006ebe
$color-link-text = #2798bd
